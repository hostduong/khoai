<!DOCTYPE html>
<html lang="en"
      class="light-style layout-navbar-fixed"
      dir="ltr"
      data-theme="theme-default"
      data-assets-path="{{ domain }}/build/"
      data-base-url="{{ domain }}"
      data-framework="laravel"
      data-template="vertical-menu-theme-default-light"
      data-style="light">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0">
  <meta name="csrf-token" content="{{ csrf_token | default('') }}">

  <title>{{ title }} | Gem.id.vn</title>

  <!-- Meta Tags SEO -->
  <meta name="title" content="{{ title }}">
  <meta name="description" content="{{ description }}">
  <meta name="keywords" content="{{ keywords }}">
  <meta name="robots" content="index, follow">
  <meta name="author" content="Gem.id.vn">
  <meta name="canonical" content="{{ page.url }}">

  <!-- Open Graph (OG) Meta Tags -->
  <meta property="og:title" content="{{ title }}">
  <meta property="og:description" content="{{ description }}">
  <meta property="og:image" content="{{ og_image }}">
  <meta property="og:url" content="{{ page.url }}">
  <meta property="og:type" content="website">

  <!-- Twitter Card Meta Tags -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="{{ title }}">
  <meta name="twitter:description" content="{{ description }}">
  <meta name="twitter:image" content="{{ og_image }}">

  <!-- Favicon -->
  <link rel="icon" type="image/x-icon" href="{{ domain }}/assets/img/favicon/favicon.ico">
  <link rel="apple-touch-icon" sizes="180x180" href="{{ domain }}/assets/img/favicon/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="{{ domain }}/assets/img/favicon/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="{{ domain }}/assets/img/favicon/favicon-16x16.png">
  <link rel="icon" type="image/png" sizes="192x192" href="{{ domain }}/assets/img/favicon/favicon-192x192.png">
  <link rel="icon" type="image/png" sizes="512x512" href="{{ domain }}/assets/img/favicon/favicon-512x512.png">

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="">
  <link href="https://fonts.googleapis.com/css2?family=Public+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&amp;display=swap" rel="stylesheet">

  <!-- Icons -->
  <link rel="preload" as="style" href="{{ domain }}/build_fe/tabler-icons.css">
  <link rel="preload" as="style" href="{{ domain }}/build_fe/fontawesome.css">
  <link rel="preload" as="style" href="{{ domain }}/build_fe/flag-icons.css">
  <link rel="preload" as="style" href="{{ domain }}/build_fe/node-waves.css">
  <link rel="stylesheet" href="{{ domain }}/build_fe/tabler-icons.css">
  <link rel="stylesheet" href="{{ domain }}/build_fe/fontawesome.css">
  <link rel="stylesheet" href="{{ domain }}/build_fe/flag-icons.css">
  <link rel="stylesheet" href="{{ domain }}/build_fe/node-waves.css">

  <!-- Core CSS (theme, layout) -->
  <link rel="preload" as="style" href="{{ domain }}/build_fe/core2.css">
  <link rel="preload" as="style" href="{{ domain }}/build_fe/core-dark2.css">
  <link rel="preload" as="style" href="{{ domain }}/build_fe/theme-default2.css">
  <link rel="preload" as="style" href="{{ domain }}/build_fe/theme-default-dark2.css">
  <link rel="preload" as="style" href="{{ domain }}/build_fe/demo.css">
  <link rel="preload" as="style" href="{{ domain }}/build_fe/front-page.css">
  <link rel="preload" as="style" href="{{ domain }}/build_fe/app.css">
  <link rel="preload" as="style" href="{{ domain }}/build_fe/sweetalert2.css">
  <link rel="preload" as="style" href="{{ domain }}/build_fe/toastr.css">
  <link rel="stylesheet" href="{{ domain }}/build_fe/core2.css" class="template-customizer-core-css">
  <link rel="stylesheet" href="{{ domain }}/build_fe/core-dark2.css" class="template-customizer-core-css">
  <link rel="stylesheet" href="{{ domain }}/build_fe/theme-default2.css" class="template-customizer-theme-css">
  <link rel="stylesheet" href="{{ domain }}/build_fe/theme-default-dark2.css" class="template-customizer-theme-css">
  <link rel="stylesheet" href="{{ domain }}/build_fe/demo.css">
  <link rel="stylesheet" href="{{ domain }}/build_fe/front-page.css">
  <link rel="stylesheet" href="{{ domain }}/build_fe/app.css">
  <link rel="stylesheet" href="{{ domain }}/build_fe/sweetalert2.css">
  <link rel="stylesheet" href="{{ domain }}/build_fe/toastr.css">

  <!-- Vendor Styles -->
  <link rel="preload" as="style" href="{{ domain }}/build_fe/perfect-scrollbar.css">
  <link rel="preload" as="style" href="{{ domain }}/build_fe/typeahead.css">
  <link rel="preload" as="style" href="{{ domain }}/build_fe/form-validation.css">
  <link rel="stylesheet" href="{{ domain }}/build_fe/perfect-scrollbar.css">
  <link rel="stylesheet" href="{{ domain }}/build_fe/typeahead.css">
  <link rel="stylesheet" href="{{ domain }}/build_fe/form-validation.css">

  <!-- Template Customizer & Config JS (must in <head>) -->
  <link rel="preload" as="style" href="{{ domain }}/build_fe/template-customizer.css">
  <link rel="modulepreload" href="{{ domain }}/build_fe/template-customizer.js">
  <link rel="stylesheet" href="{{ domain }}/build_fe/template-customizer.css">
  <script type="module" src="{{ domain }}/build_fe/template-customizer.js"></script>

  <link rel="modulepreload" href="{{ domain }}/build_fe/helpers.js">
  <script type="module" src="{{ domain }}/build_fe/helpers.js"></script>
  <link rel="modulepreload" href="{{ domain }}/build_fe/front-config.js">
  <script type="module" src="{{ domain }}/build_fe/front-config.js"></script>

  <!-- Khởi tạo theme customizer ngay trong head -->
  <script type="module">
    window.templateCustomizer = new TemplateCustomizer({
      cssPath: '',
      themesPath: '',
      defaultStyle: "light",
      displayCustomizer: "1",
      pathResolver: function(path) {
        var resolvedPaths = {
          'core.scss': '{{ domain }}/build_fe/core2.css',
          'core-dark.scss': '{{ domain }}/build_fe/core-dark2.css',
          'theme-default.scss': '{{ domain }}/build_fe/theme-default2.css',
          'theme-default-dark.scss': '{{ domain }}/build_fe/theme-default-dark2.css',
          'theme-bordered.scss': '{{ domain }}/build_fe/theme-bordered2.css',
          'theme-bordered-dark.scss': '{{ domain }}/build_fe/theme-bordered-dark2.css',
          'theme-semi-dark.scss': '{{ domain }}/build_fe/theme-semi-dark2.css',
          'theme-semi-dark-dark.scss': '{{ domain }}/build_fe/theme-semi-dark-dark2.css'
        }
        return resolvedPaths[path] || path;
      },
      controls: ["rtl","style"]
    });
  </script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/css/intlTelInput.min.css" />
  <!-- jQuery (nếu cần) -->
  <script src="{{ domain }}/build/js/jquery.min.js"></script>

  <!-- Style fix để chuẩn Layout Navbar như UnlimitMail -->
  <style type="text/css">
    .layout-menu-fixed .layout-navbar-full .layout-menu,
    .layout-menu-fixed-offcanvas .layout-navbar-full .layout-menu {
      top: 90px !important;
    }
    .layout-page {
      padding-top: 90px !important;
    }
    .content-wrapper {
      padding-bottom: 0px !important;
    }
  </style>

</head>

  <body class="bg-light">
